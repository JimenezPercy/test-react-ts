{
  "compilerOptions": {                          //定义编译器工作方式
    "noImplicitAny": false,                     //不需要显式地声明变量的类型any
    "target": "es5",                            //编译后的目标JavaScript版本：ES5、ES6/ES2015、ES2015、ES2017、ES2018、ES2019、ES2020、ESNext
    "lib": [                                    //编译期间需要包含的库文件，告诉编译器哪些功能可以使用
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,                            //开启后允许混合编译JavaScript文件
    "skipLibCheck": true,
    "esModuleInterop": true,                    //开启后允许我们使用commonjs的方式import默认文件
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",                         //配置的是代码的模块系统，Node.js的CommonJS、ES6标准的esnext、requirejs
    "moduleResolution": "node",                 //决定了编译器的工作方式，“node“或”classic“
    "resolveJsonModule": true,
    "isolatedModules": true,                    //编译器会将每个文件作为单独的模块来使用
    "noEmit": true,                             //表示当发生错误的时候，编译器不要生成JavaScript代码
    "jsx": "react-jsx"                          //允许编译器支持编译react代码
  },
  "include": [
    "src"
  ]
}
